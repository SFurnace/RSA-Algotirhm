<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" prefHeight="400.0" prefWidth="600.0"
          stylesheets="@functions.css" xmlns="http://javafx.com/javafx/8"
          fx:controller="app.view.FunctionsController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
    </rowConstraints>
    <Button fx:id="textBtn" alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clickTextBtn" styleClass="app-btn"
            text="Encrypt/Decrypt Text" GridPane.columnIndex="1"/>
    <Button fx:id="identityBtn" alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clickIdentityBtn" opacity="0.8"
            styleClass="app-btn" text="Verify Signature" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button fx:id="fileBtn" alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clickFileBtn" opacity="0.8"
            styleClass="app-btn" text="Encrypt/Decrypt File" GridPane.rowIndex="2"/>
</GridPane>
